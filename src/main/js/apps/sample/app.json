{
    "properties": {
        "title": "${apptitle}"
    },
    "load": {
        "bundleLocations": [
            "localbundles",
            "bundles"
        ],
        "allowedBundles": [
            "system",
            "console",
            "notifier",
            "splashscreen",
            "templatelayout",
            "template-seasons",
            "theme-everlasting",
            "theme-spring",
            "theme-summer",
            "theme-autumn",
            "theme-winter",
            "map-init",
            "map-preload-2D",
            "toolset",
            "toolrules",
            "banner",
            "mapnavigation",
            "toc",
            "scalebar",
            "dn_sketchingenhanced"
        ],
        "require": [
            "${app}.app"
        ],
        "i18n": [
            "bundle"
        ]
    },
    "bundles": {
        "themes": {
            "ThemeModel": {
                "_selectedTheme": "everlasting"
            },
            "ThemeSelector": {
                "componentEnabled": true
            }
        },
        "dn_sketchingenhanced": {
            "Config": {
                "activeToolOnStartup": "drawpointtool",
                "firstToolGroupIds": [
                    "drawpointtool",
                    "sketchinglinegroup",
                    "sketchingpolygongroup",
                    "drawtexttool"
                ],
                "lastToolGroupIds": [
                    "sketchingtoolbox"
                ],
                "headerToolIds": [
                    "drawundotool",
                    "drawredotool",
                    "drawcanceltool"
                ]
            }
        },
        "dn_sketchingenhanced-measurement": {
            "Config": {
                "disabledMeasurementTools": [
                    "drawarrowtool",
                    "drawfreehandpolygontool",
                    "drawfreehandpolylinetool",
                    "drawcircletool",
                    "drawellipsetool",
                    "drawtexttool"
                ],
                "decimalPlacesMeter": 1,
                "decimalPlacesKiloMeter": 2,
                "showLineMeasurementsAtPolylines": true,
                "showLineMeasurementsAtPolygons": false,
                "showAngleMeasurementsAtPolylines": false,
                "enableAngleMeasurement": false,
                "pointSRS": "4326",
                "pointCoordPlaces": "3",
                "pointCoordUnitSymbolX": "°E",
                "pointCoordUnitSymbolY": "°N"
            }
        },
        "dn_sketchingenhanced-tools": {
            "Config": {
                "graphicLayerId": "sketchingGraphicLayer",
                "graphicLayerTitle": "${layerTitle}",
                "sketch": {
                    "updateOnGraphicClick": false,
                    "defaultUpdateOptions": {
                        "tool": "reshape",
                        "enableMoveAllGraphics": false,
                        "enableRotation": false,
                        "enableScaling": false,
                        "preserveAspectRatio": false,
                        "toggleToolOnClick": false,
                        "multipleSelectionEnabled": false
                    },
                    "textSymbol": {
                        "type": "esriTS",
                        "color": {
                            "r": 64,
                            "g": 64,
                            "b": 65,
                            "a": 1
                        },
                        "backgroundColor": [
                            0,
                            0,
                            0,
                            0
                        ],
                        "lineWidth": 512,
                        "horizontalAlignment": "left",
                        "font": {
                            "family": "Arial",
                            "size": 18,
                            "style": "normal",
                            "weight": "normal",
                            "decoration": "none"
                        },
                        "haloColor": {
                            "r": 0, 
                            "g": 0,
                            "b": 1, 
                            "a": 0.8
                        }
                    },
                    "pointSymbol": {
                        "color": {
                            "r": 102,
                            "g": 205,
                            "b": 0,
                            "a": 0.4
                        },
                        "radius": 12,
                        "type": "esriSMS",
                        "shape": "circle",
                        "outline": {
                            "color": {
                                "r": 64,
                                "g": 64,
                                "b": 65,
                                "a": 1
                            },
                            "width": 1,
                            "type": "esriSLS",
                            "style": "solid"
                        }
                    },
                    "polygonSymbol": {
                        "type": "esriSFS",
                        "color": {
                            "r": 102,
                            "g": 205,
                            "b": 0,
                            "a": 0.4
                        },
                        "outline": {
                            "color": {
                                "r": 64,
                                "g": 64,
                                "b": 65,
                                "a": 1
                            },
                            "style": "solid",
                            "type": "esriSLS",
                            "width": 1.3
                        },
                        "size": 16,
                        "style": "solid",
                        "xoffset": 0,
                        "yoffset": 0
                    },
                    "polylineSymbol": {
                        "color": {
                            "r": 64,
                            "g": 64,
                            "b": 65,
                            "a": 1
                        },
                        "style": "solid",
                        "type": "esriSLS",
                        "width": 2
                    }
                }
            },
            "DrawTextController": {
                "lineWidth": 512,
                "minWidth": 400,
                "maxWidth": 800
            }
        },
        "banner": {
            "BannerWidget": {
                "label": "Developer Network",
                "image": "resource('${app}:/images/logo_conterra.png')",
                "imageWidth": 200,
                "imagePosition": "above",
                "link": "http://developernetwork.conterra.de"
            }
        },
        "map-init": {
            "Config": {
                "basemaps": [
                    {
                        "id": "esri_street",
                        "title": "Straßenkarte (grau)",
                        "thumbnailUrl": "resource('${app}:/images/streets.png')",
                        "basemap": "gray-vector",
                        "selected": true
                    }
                ],
                "map": {
                    "layers": [
                        {
                            "id": "koeln",
                            "url": "https://services.conterra.de/arcgis/rest/services/common/koeln/MapServer",
                            "type": "AGS_DYNAMIC",
                            "sublayers": [
                                {
                                    "id": 2,
                                    "sketchingEnhanced": {
                                        "allowSnapping": true
                                    }
                                },
                                {
                                    "id": 9,
                                    "sketchingEnhanced": {
                                        "allowSnapping": false
                                    }
                                },
                                {
                                    "id": 10,
                                    "sketchingEnhanced": {
                                        "allowSnapping": false
                                    }
                                },
                                {
                                    "id": 11,
                                    "sketchingEnhanced": {
                                        "allowSnapping": true
                                    }
                                }
                            ]
                        }
                    ]
                },
                "view": {
                    "viewmode": "2D",
                    "center": {
                        "x": 774853,
                        "y": 6610677,
                        "spatialReference": 3857
                    },
                    "scale": 140000
                }
            }
        },
        "templates": {
            "TemplateModel": {
                "_templates": [
                    {
                        "name": "seasons",
                        "widgets": [
                            {
                                "widgetRole": "drawer_button",
                                "attachTo": "map_topleft",
                                "props": {
                                    "layoutIndex": 0
                                }
                            }
                        ]
                    }
                ]
            }
        },
        "toolrules": {
            "ToolActiveStateManager": {
                "activateOnStartToolIds": [
                    "sketchingEnhancedWidgetToggleTool"
                ]
            }
        },
        "toolset": {
            "ToolsetManager": {
                "toolsets": [
                    {
                        "id": "mapview_tools",
                        "tools": [
                            "zoomInTool",
                            "zoomOutTool",
                            "compassTool",
                            "restoreInitialViewTool"
                        ],
                        "registerWidget": {
                            "widgetRole": "mapview_tools"
                        },
                        "container": "ignore",
                        "windowType": "container",
                        "cssClass": "muted"
                    },
                    {
                        "id": "drawer_left",
                        "title": "Werkzeuge",
                        "cssClass": "ct-main-app-menu",
                        "tools": [
                            "sketchingEnhancedWidgetToggleTool"
                        ],
                        "registerWidget": {
                            "widgetRole": "drawer_button"
                        },
                        "container": "ignore",
                        "windowType": "drawer_left"
                    }
                ]
            }
        }
    }
}
